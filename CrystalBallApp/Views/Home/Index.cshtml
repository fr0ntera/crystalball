<script src="~/Scripts/jquery-2.1.4.js"></script>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<button>Click Me</button>
<p id="reply"></p>

<script>
    $(document).ready(function () {
        $("button").click(function () {
            //       alert("whoa it's working")
            $.get("@Url.Action("ShakeBall","Home")", function (response) {
                $("#reply").text(response);
            });
        });
    });

</script>